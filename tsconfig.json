{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "dist",
    "allowJs": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "removeComments": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
